<Oak.Page id="runner" data-editing={oak.state.editing}>
  <Oak.SplitPanel direction="vertical" appearance="inverted" sizes={[35, "100%"]}>
    <Oak.FixedPanel appearance="inverted bottom-border bottom-shadow" style={{ zIndex: 100000 }}>
      <Oak.SplitPanel direction="horizontal" appearance="inverted bordered" sizes={window.innerWidth > 1600 ? [599, "100%"] : [299, "100%"]}>
        <Oak.AppMenubar ref="appMenubar"/>
        <Oak.EditorToolbar ref="editorToolbar"/>
      </Oak.SplitPanel>
    </Oak.FixedPanel>
    <Oak.SplitPanel direction="horizontal" sizes={window.innerWidth > 1600 ? [600, "100%"] : [300, "100%"]}>
      <Oak.FixedPanel id="SelectionSidebar" appearance="inverted right-border right-shadow">
        <Oak.SplitPanel resizable scrolling appearance={["fluid", "inverted"]} direction={window.innerWidth > 1600 ? "horizontal" : "vertical"}>
          <Oak.ComponentTree controller={oak.editController} appearance="inverted"/>
          <Editor.ElementEditor controller={oak.editController} element={oak.selectedComponents[0]} appearance="inverted"/>
        </Oak.SplitPanel>
      </Oak.FixedPanel>
      <Oak.Panel fluid scrolling>
        <Oak.CurrentProject/>
        <Oak.SelectionOverlay ref="selectionOverlay"/>
      </Oak.Panel>
    </Oak.SplitPanel>
  </Oak.SplitPanel>
</Oak.Page>
