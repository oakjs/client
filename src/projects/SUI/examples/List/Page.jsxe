  <PageSection title="Types">
    <SUI.Grid columns={3}>
      <SUI.Column>
        <Example title="Text / Icon only">
          <SUI.List>
            <SUI.ListItem content="Semantic UI" icon="users"/>
            <SUI.ListItem>
              <SUI.Icon icon="marker"/>
              Asheville, NC
            </SUI.ListItem>
            <SUI.ListItem icon="mail">
              <a href="mailto:jack@semantic-ui.com">
                jack@semantic0ui.com
              </a>
            </SUI.ListItem>
          </SUI.List>
        </Example>
      </SUI.Column>
      <SUI.Column>
        <Example title="Link" hint="<List appearance='link'/>">
          <SUI.List appearance="link">
            <SUI.ListItem content="Home" href="http://google.com" target="_blank"/>
