                </SUI.ListItem>
              </SUI.List>
            </SUI.ListItem>
            <SUI.ListItem>
              Warranty
            </SUI.ListItem>
          </SUI.List>
        </Example>
      </SUI.Column>
      <SUI.Column columns={6}>
        <Example title="Nested Lists">
          <SUI.List>
            <SUI.ListItem icon="folder" header="src" description="Source files for project">
              <SUI.List>
                <SUI.ListItem icon="folder" header="site" description="Your site's theme"/>
                <SUI.ListItem icon="folder" header="themes" description="Packaged theme files">
                  <SUI.List>
                    <SUI.ListItem icon="folder" header="default" description="Default theme"/>
                    <SUI.ListItem icon="folder" header="my_theme" description="Custom themes"/>
                  </SUI.List>
                </SUI.ListItem>
                <SUI.ListItem icon="file" header="theme.config" description="Theme configuration file"/>
              </SUI.List>
            </SUI.ListItem>
            <SUI.ListItem icon="folder" header="dist" description="Compiled CSS and JS files"/>
          </SUI.List>
        </Example>
      </SUI.Column>
    </SUI.Grid>
