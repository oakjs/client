        </SUI.Header>
        <SUI.Header sub size="medium">
          Third Sub Header
        </SUI.Header>
        <SUI.Header sub size="small">
          Fourth Sub Header
        </SUI.Header>
        <SUI.Header sub size="tiny">
          Fifth Sub Header
        </SUI.Header>
      </SUI.Segment>
    </Example>
    <Example title="Icon Headers" hint="<Header appearance='icon' icon='settings'/>">
      <SUI.Segment>
        <SUI.Grid>
          <SUI.Column width={3}>
            <SUI.Header page appearance="icon" icon="settings" align="center" size="small">
