<Oak.Page id="Statistic" title="Statistic" oid="UIslT3Hx">
  <PageTitle title="Statistic" oid="eOb1VfSL">
    A statistic emphasizes the current value of an attribute
    <Info oid="CKqpN2mJ">
      If you have multiple &lt;Statistic&gt;s in a row and they don&apos;t line up vertically,
      wrap them in a &lt;Statistics&gt; element.
    </Info>
  </PageTitle>
  <PageSection title="Content" oid="aNEvxijh">
    <Example title="Inline content" oid="lyeUkxPD">
      <SUI.Statistics oid="xJNregCk">
        <SUI.Statistic oid="HbBaWuiG">
          <div className="value" oid="OGpGRM2t">
            5,500
          </div>
          <div className="label" oid="M1SIqZB0">
            Downloads
          </div>
        </SUI.Statistic>
        <SUI.Statistic oid="lPh2XGJB">
          <div className="text value" oid="jDbwppxs">
            Three
            <br oid="fgH8oEQ4"/>
            Thousand
          </div>
          <div className="label" oid="IYIYWg8E">
            Downloads
          </div>
        </SUI.Statistic>
      </SUI.Statistics>
    </Example>
    <Example title="Value, and Label and LabelOn attributes" hint="<Statistic value='...' label='...' labelOn='top'/>" oid="KJQbPmKc">
      <SUI.Statistics oid="DHuOQhyD">
        <SUI.Statistic value="5,500" label="Downloads" oid="qctVrHP7"/>
        <SUI.Statistic labelOn="top" value="5,500" label="Downloads" oid="a3e2u2Og"/>
      </SUI.Statistics>
    </Example>
    <Example title="Icon attribute" hint="<Statistic icon='...' decorationOn='right'/>" oid="WZ1LsR58">
      <SUI.Statistic icon="world" value="500" label="Countries Represented" oid="FaGaTSCE"/>
      <SUI.Statistic icon="world" decorationOn="right" value="500" label="Countries Represented" oid="gDerVYfm"/>
    </Example>
    <Example title="Image attribute" hint="<Statistic image='...' imageAppearance='...' decorationOn='right'/>" oid="l07RR7ee">
      <SUI.Statistic image={data.joeAvatar} imageAppearance="ui circular inline image" value="42" label="Team members" oid="stZOkD3P"/>
      <SUI.Statistic image={data.joeAvatar} decorationOn="right" imageAppearance="ui circular inline image" value="42" label="Team members" oid="pvFj7OYM"/>
    </Example>
  </PageSection>
